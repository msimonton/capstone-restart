<script>
$(document).ready(()  =>{
  $('#modal-open').click(function()  {
    $('.formFirst').fadeIn(500)
    $('body').addClass('modal-fade')
    $('#modal-open').fadeOut(200)

  })

  $('#next-first').click(function() {
    $('.formFirst').fadeOut(200)
    $('.formSecond').delay(200).fadeIn(200)
  });

  $('#next-second').click(function()  {
    $('.formSecond').fadeOut(200)
    $('.formThird').delay(200).fadeIn(200)
  });

  $('#last-second').click(function()  {
    $('.formSecond').fadeOut(200)
    $('.formFirst').delay(200).fadeIn(200)
  });

  $('#last-third').click(function()  {
    $('.formThird').fadeOut(200)
    $('.formSecond').delay(200).fadeIn(200)
  })

  $('.modal-close').click(function()  {
    $('.formFirst').fadeOut(400)
    $('.formSecond').fadeOut(400)
    $('.formThird').fadeOut(400)
    $('body').removeClass('modal-fade')
    $('#modal-open').fadeIn(400)
  })

})

</script>
